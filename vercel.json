{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "ignoreCommand": "echo 'Use Vercel cache'",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://banddy.site/api/$1"
    },
    {
      "source": "/auth/(.*)",
      "destination": "https://banddy.site/auth/$1"
    },
    {
      "source": "/ws",
      "destination": "https://banddy.site/ws"
    },
    {
      "source": "/member",
      "destination": "https://banddy.site/member"
    },
    {
      "source": "/member/(.*)",
      "destination": "https://banddy.site/member/$1"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
